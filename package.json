{
  "name": "paper-application-status",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/src/main.js\"",
    "start:prod": "node dist/src/main.js",
    "prestart:prod": "rimraf dist && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "typeorm:create": "npm run typeorm migration:create -- -n",
    "typeorm:revert": "npm run typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.0",
    "@nestjs/core": "^6.10.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/platform-socket.io": "^6.7.2",
    "@nestjs/testing": "^6.0.0",
    "@nestjs/websockets": "^6.7.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/jest": "^23.3.13",
    "@types/node": "11.13.4",
    "@types/socket.io": "^2.1.3",
    "jest": "^23.6.0",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "dotenv": "^8.2.0",
    "mysql": "^2.17.1",
    "pm2": "^4.1.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.19",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.7.2",
    "socket.io-redis": "^5.2.0"
  },
  "devDependencies": {
    "@nestjs/platform-socket.io": "^6.7.2",
    "@nestjs/testing": "^6.0.0",
    "@nestjs/websockets": "^6.7.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/jest": "^23.3.13",
    "@types/node": "11.13.4",
    "@types/socket.io": "^2.1.3",
    "jest": "^23.6.0",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
